<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dl_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="所属区县"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <com.tmxk.wscl.android.util.MyScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.yyydjk.library.DropDownMenu
                        android:id="@+id/dropDownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dddividerColor="@color/gray"
                        app:ddmaskColor="@color/mask_color"
                        app:ddmenuBackgroundColor="@color/white"
                        app:ddmenuMenuHeightPercent="0.5"
                        app:ddmenuSelectedIcon="@mipmap/drop_down_selected_icon"
                        app:ddmenuTextSize="13sp"
                        app:ddmenuUnselectedIcon="@mipmap/drop_down_unselected_icon"
                        app:ddtextSelectedColor="@color/drop_down_selected"
                        app:ddtextUnselectedColor="@color/drop_down_unselected"
                        app:ddunderlineColor="@color/gray" />
                </com.tmxk.wscl.android.util.MyScrollView>
            </LinearLayout>

            <!--取样时间 出水COD 出水NH3N 出水P 进水COD 进水NH3N 进水P 化验单号-->
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="出水COD"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/edtOutCod"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/dl_edt_style"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/ll2"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="出水NH3N"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/edtOutNh3n"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/dl_edt_style"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/ll3"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="出水P"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/edtOutP"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/dl_edt_style"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/ll4"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="进水COD"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/edtInCod"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/dl_edt_style"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll6"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/ll5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="进水NH3N"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/edtInNh3n"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/dl_edt_style"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll7"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/ll6"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="进水P"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/edtInP"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/dl_edt_style"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll8"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/ll7"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="化验单号"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/edtReportNo"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/dl_edt_style"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="14sp"
                    tools:ignore="Autofill,LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll9"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/ll8"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取样时间"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btnTestDate"
                    android:layout_width="0dp"
                    android:layout_height="46.5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_e6e6e6"
                    android:ems="10"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:onClick="onClick"
                    android:padding="2dp"
                    android:text="请选择时间"
                    android:textColor="#333"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,LabelFor" />
            </LinearLayout>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/dl_btn_style"
                android:onClick="onClick"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>