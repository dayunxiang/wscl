<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dl_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户名"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtLoginName"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户姓名"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="邮箱地址"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="部门名称"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtDepart"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll4"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号码"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtTelephone"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll5"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv6"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="密码"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/selector_e6e6e6"
        android:onClick="onClick"
        android:text="提交修改"
        android:textColor="#333"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>