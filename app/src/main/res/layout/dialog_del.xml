<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginStart="58dp"
        android:background="@drawable/shape_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="9dp"
            android:drawableStart="@mipmap/icon_warn"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="确认删除"
            android:textSize="19sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="删除后用户不可恢复"
            android:textColor="#999"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginEnd="18dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="18dp"
                android:layout_marginStart="44dp"
                android:layout_weight="0.5"
                android:background="@drawable/selector_1affffff"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="确认删除"
                android:textColor="#51ACF2"
                android:textSize="13sp"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginEnd="44dp"
                android:layout_weight="0.5"
                android:background="@drawable/selector_1a51acf2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="15sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>