<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dl_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp">
        <!--设备名称、设备编号、设备类型、设备功率、安装时间-->
        <TextView
            android:id="@+id/tv1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备名称"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtDeviceName"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备编号"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtDeviceNo"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备类型"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtDeviceType"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备功率"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtDevicePower"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll4"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备年限"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtDeviceLimitYear"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll5"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv6"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="安装时间"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnDeviceSetupDate"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_e6e6e6"
            android:ems="10"
            android:maxLength="20"
            android:maxLines="1"
            android:onClick="onClick"
            android:padding="2dp"
            android:text="请选择时间"
            android:textColor="#333"
            android:textSize="14sp"
            tools:ignore="HardcodedText,LabelFor" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/dl_btn_style"
        android:onClick="onClick"
        android:text="提交修改"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>