<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deviceParentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dl_bg"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="处理人"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtHandleMan"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/dl_edt_style"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="2dp"
            android:textSize="14sp"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="处理时间"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnHandleDate"
            android:layout_width="0dp"
            android:layout_height="46.5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_e6e6e6"
            android:ems="10"
            android:maxLength="20"
            android:maxLines="1"
            android:onClick="onClick"
            android:padding="2dp"
            android:text="不限"
            android:textColor="#333"
            android:textSize="14sp"
            tools:ignore="HardcodedText,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="44dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector_1affffff"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="确认"
            android:textColor="#4bab54"
            android:textSize="13sp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginEnd="44dp"
            android:layout_weight="0.5"
            android:background="@drawable/dl_btn_style"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="13sp"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>
</LinearLayout>